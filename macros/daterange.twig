{#
  Generates a date range for two numbers. If the start and end date have a matching month, the month isn't repeated.

  {% import _self as macro %}
  {{ macro.daterange(entry.eventStart, entry.eventEnd) }}

  # => January 14 â€” 16, 2019
  # => January 14 â€” February 2, 2019

#}

{% macro daterange(start, end) %}
  {% if end %}
    {{ start|date('F j') }}
    &ndash;
    {% if start|date('F') == end|date('F') %}
      {{ end|date('j, Y') }}
    {% else %}
      {{ end|date('F j, Y') }}
    {% endif %}
  {% else %}
    {{ start|date('F j, Y') }}
  {% endif %}
{% endmacro %}
